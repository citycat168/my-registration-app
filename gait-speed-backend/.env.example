#######################
# Server Configuration
#######################
PORT=3001
NODE_ENV=development

#######################
# Database Configuration
#######################
MONGODB_URI=mongodb+srv://username:password@your-cluster-url/?retryWrites=true&w=majority

#######################
# Security & JWT
#######################
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=10
TOKEN_EXPIRY_DAYS=30

#######################
# Email Configuration
#######################
EMAIL_SERVICE=Gmail
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Your App Name <your-email@gmail.com>

#######################
# Application URLs
#######################
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
API_VERSION=v1

#######################
# Admin Configuration
#######################
# Super Admin
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_USERNAME=admin
SUPER_ADMIN_PASSWORD=your_secure_password_here
SUPER_ADMIN_ROLE=superadmin

# Default Admin Settings
ADMIN_TOKEN_EXPIRY=30d
ADMIN_SESSION_TIMEOUT=8h
ADMIN_LOGIN_ATTEMPTS=5
ADMIN_LOCKOUT_TIME=15m

#######################
# Rate Limiting
#######################
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

#######################
# Logging
#######################
LOG_LEVEL=debug
LOG_FORMAT=combined

#######################
# Cors Configuration
#######################
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

#######################
# File Upload
#######################
MAX_FILE_SIZE=5mb
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif